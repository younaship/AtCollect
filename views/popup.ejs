<div id="popup" class="none" 
    style="position:fixed;top:0;left:0;width:100%;height:100%;z-index:5;background-color:rgba(0,0,0,.8)">

    <div class="view" >
        <div class="fill ab" id="popup_view_in" ></div>
    </div>

    <img src="/img/cross.png" id="popup_close" class="btn"
        style="position:absolute;top:0px;right:0px;margin:10px;height:28px;" />
    
</div>

<script>

    function viewPopUp(html){
        $("#popup").removeClass("none");
        $("#popup_view_in").html(html);
    }

    $("#popup_close").click(()=>{
        $("#popup").addClass("none");
    });

</script>