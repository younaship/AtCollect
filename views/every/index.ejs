                </div> -->

                    <script>
                    
                        $("#<%= p.guid %>_go").click(async function(){
                            const message = "<%= p.message %>";
                            const jObj = $("#<%= p.guid %>").addClass("trans");
                            const res = await ac.sendQusetionToMe(message);
                            setTimeout(()=>{
                                jObj.remove();
